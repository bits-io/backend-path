<%- include('../../partials/header.ejs') %>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../../partials/sidebar.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('../../partials/navbar.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <%- include('../../partials/message.ejs') %>

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Item</h1>
                    <!-- End Heading -->
                    
                    <% if(action == 'view'){ %>
                    
                    <nav aria-labelledby="">
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                          <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="nav-home" aria-selected="true">Show Item</a>
                          <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="nav-profile" aria-selected="false">Add Item</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <%- include('show_table_item.ejs') %>
                        <%- include('add_item.ejs') %>
                    </div>
                    <% } else if(action == 'show image'){ %>
                        <nav aria-labelledby="">
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                              <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="home" aria-selected="true">Show Image</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <%- include('show_image_item.ejs') %>
                        </div>
                    <% } %>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('../../partials/footer.ejs') %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

<%- include('../../partials/script.ejs') %>

